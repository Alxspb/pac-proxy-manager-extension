{
  "name": "pac-proxy-manager-extension",
  "version": "1.0.0",
  "description": "A Chrome extension to manage PAC (Proxy Auto Configuration) files",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest --run",
    "lint:fix": "biome check src/ --write --unsafe",
    "package": "npm run build && rm -f chrome-extension.zip && zip -r chrome-extension.zip manifest.json dist icons _locales"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/vite": "^4.1.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.1.4",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  }
